  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.tokens.accessToken);",
                  "    pm.environment.set('refreshToken', response.tokens.refreshToken);",
                  "    pm.environment.set('userId', response.user.id);",
                  "    pm.test('Register successful', () => {",
                  "        pm.expect(response.user).to.have.property('email');",
                  "        pm.expect(response.tokens).to.have.property('accessToken');",
                  "    });",
                  "} else {",
                  "    pm.test('Register failed - check error', () => {",
                  "        pm.expect(pm.response.code).to.equal(201);",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"User123!\",\n  \"fullName\": \"Test User\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new user account.\n\n**Password Requirements:**\n- Minimum 8 characters\n- Must contain uppercase letter\n- Must contain lowercase letter\n- Must contain number or symbol\n\n**Roles:**\n- `admin` - Full access\n- `user` - Standard user (default)\n- `farmer` - Farmer access"
          },
          "response": []
        },
        {
          "name": "2. Login with Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('accessToken', response.tokens.accessToken);",
                  "    pm.environment.set('refreshToken', response.tokens.refreshToken);",
                  "    pm.environment.set('userId', response.user.id);",
                  "    pm.collectionVariables.set('accessToken', response.tokens.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.tokens.refreshToken);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(response.user.role).to.equal('admin');",
                  "        pm.expect(response.tokens.accessToken).to.be.a('string');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@smartfarming.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with default admin account.\n\n**Default Credentials:**\n- Email: admin@smartfarming.com\n- Password: Admin123!\n\n**Response includes:**\n- User information (id, email, fullName, role)\n- Access token (expires in 15 minutes)\n- Refresh token (expires in 7 days)"
          },
          "response": []
